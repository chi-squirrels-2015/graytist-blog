<h1>Write a new post:</h1>

<%= form_for @post, url: {action: "create"} do |f| %>
  <% if @post.errors.any? %>
  <ul class="errors">
    <% @post.errors.full_messages.each do |error| %>
      <li class="error"><%= error %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="form-group">
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Body:" %>
    <%= f.text_area :body, size: "0x16" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Post" %>
  </div>
<% end %>